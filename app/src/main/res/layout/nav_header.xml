<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_main"
        android:orientation="vertical"
        android:paddingTop="@dimen/_15sdp"
        >

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
                  android:padding="@dimen/_15sdp">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="@dimen/_45sdp"
        >
            <ImageView android:layout_width="match_parent" android:layout_height="@dimen/_45sdp"
                       app:srcCompat = "@drawable/ic_logo"
                       android:scaleType="fitStart"
                       android:paddingBottom="@dimen/_10sdp"/>

            <ImageView android:layout_width="@dimen/_20sdp" android:layout_height="@dimen/_25sdp"
                       android:id="@+id/img_close_navigation"
                       app:srcCompat = "@drawable/ic_close"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:paddingBottom="@dimen/_10sdp"/>
        </RelativeLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/view_line"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="@dimen/_54sdp"
                      android:orientation="horizontal"
                      android:paddingTop="@dimen/_7sdp"
                      android:paddingBottom="@dimen/_7sdp">
            <de.hdodenhof.circleimageview.CircleImageView android:layout_width="@dimen/_40sdp" android:layout_height="@dimen/_40sdp"
                                                          android:src="@color/white"
                                                          android:layout_centerHorizontal="true"
                                                          android:layout_centerVertical="true"
                                                          android:id="@+id/img_avatar"
                                                          android:layout_gravity="center_vertical"/>

            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:layout_centerVertical="true"
                              android:layout_gravity="center_vertical"
                              android:gravity="center_vertical"
                              android:orientation="vertical"
                              android:layout_marginLeft="@dimen/_15sdp"
                              android:id="@+id/layout_view_account"
                android:visibility="gone">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:id="@+id/txt_username"
                              android:textColor="@color/white"
                              android:text="aaaaaa"
                              android:textSize="@dimen/_13sdp"
                              android:fontFamily="@font/roboto_regular"/>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:id="@+id/layout_edit_profile"
                    >
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:textColor="@color/rose"
                                  android:text="@string/edit_profile"
                                  android:textSize="@dimen/_10sdp"
                                  android:fontFamily="@font/roboto_regular"
                                  android:gravity="center_vertical"/>
                        <ImageView android:layout_width="@dimen/_8sdp" android:layout_height="@dimen/_8sdp"
                                   app:srcCompat = "@drawable/ic_next"
                                   android:layout_gravity="center_vertical"
                                   android:layout_marginLeft="@dimen/_3sdp"
                                   android:paddingTop="@dimen/_1sdp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:orientation="horizontal"
                              android:layout_centerVertical="true"
                              android:layout_marginLeft="@dimen/_15sdp"
                              android:id="@+id/layout_login_account"
                >

                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:background="@drawable/custom_edittext_login_white"
                              android:textColor="@color/background_main"
                              android:text="@string/signup"
                              android:padding="@dimen/_5sdp"
                              android:id="@+id/txt_signup"
                              android:layout_marginRight="@dimen/_3sdp"
                              android:fontFamily="@font/roboto_regular"
                              android:gravity="center"
                              android:textSize="@dimen/_10sdp"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:background="@drawable/custom_edittext_login_white_violet"
                              android:textColor="@color/white"
                              android:text="@string/login"
                              android:textSize="@dimen/_10sdp"
                              android:padding="@dimen/_5sdp"
                              android:id="@+id/txt_login"
                              android:layout_marginLeft="@dimen/_3sdp"
                              android:fontFamily="@font/roboto_regular"
                              android:gravity="center"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/view_line_behind"/>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/_40sdp"
                        android:id="@+id/layout_member">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/member_big"
                      android:textSize="@dimen/_11sdp"
                      android:textColor="@color/white"
                      android:fontFamily="@font/roboto_regular"
                      android:layout_centerVertical="true"
            />
            <ImageView android:layout_width="@dimen/_14sdp" android:layout_height="@dimen/_14sdp"
                       app:srcCompat = "@drawable/ic_next"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"/>

            <View android:layout_width="match_parent" android:layout_height="1dp"
                  android:background="@color/view_line_behind"
                  android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/_40sdp"
                        android:id="@+id/layout_bonus_member">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/bonus_member_big"
                      android:textSize="@dimen/_11sdp"
                      android:textColor="@color/white"
                      android:fontFamily="@font/roboto_regular"
                      android:layout_centerVertical="true"
            />
            <ImageView android:layout_width="@dimen/_14sdp" android:layout_height="@dimen/_14sdp"
                       app:srcCompat = "@drawable/ic_next"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"/>

            <View android:layout_width="match_parent" android:layout_height="1dp"
                  android:background="@color/view_line_behind"
                  android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/_40sdp"
                        android:id="@+id/layout_manage_order">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/_manage_order_big"
                      android:textSize="@dimen/_11sdp"
                      android:textColor="@color/white"
                      android:fontFamily="@font/roboto_regular"
                      android:layout_centerVertical="true"
            />
            <ImageView android:layout_width="@dimen/_14sdp" android:layout_height="@dimen/_14sdp"
                       app:srcCompat = "@drawable/ic_next"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"/>

            <View android:layout_width="match_parent" android:layout_height="1dp"
                  android:background="@color/view_line_behind"
                  android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/_40sdp"
                        android:id="@+id/layout_new_order">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/new_order_big"
                      android:textSize="@dimen/_11sdp"
                      android:textColor="@color/white"
                      android:fontFamily="@font/roboto_regular"
                      android:layout_centerVertical="true"
            />
            <ImageView android:layout_width="@dimen/_14sdp" android:layout_height="@dimen/_14sdp"
                       app:srcCompat = "@drawable/ic_next"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"/>

            <View android:layout_width="match_parent" android:layout_height="1dp"
                  android:background="@color/view_line_behind"
                  android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/_40sdp"
                        android:id="@+id/layout_sale_product">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/sale_product_big"
                      android:textSize="@dimen/_11sdp"
                      android:textColor="@color/white"
                      android:fontFamily="@font/roboto_regular"
                      android:layout_centerVertical="true"
            />
            <ImageView android:layout_width="@dimen/_14sdp" android:layout_height="@dimen/_14sdp"
                       app:srcCompat = "@drawable/ic_next"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/_40sdp"
                    android:id="@+id/layout_about_us"
    android:layout_marginTop="@dimen/_40sdp"
    android:background="@color/background_main_second"
    android:paddingLeft="@dimen/_15sdp"
    android:paddingRight="@dimen/_15sdp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/abount_us"
                  android:textSize="@dimen/_12sdp"
                  android:textColor="@color/white"
                  android:fontFamily="@font/roboto_regular"
                  android:layout_centerVertical="true"
        />
        <ImageView android:layout_width="@dimen/_14sdp" android:layout_height="@dimen/_14sdp"
                   app:srcCompat = "@drawable/ic_next"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"/>

        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/view_line"
              android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/_40sdp"
                    android:id="@+id/layout_level_fruits"
                    android:background="@color/background_main_second"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/level_fruits"
                  android:textSize="@dimen/_12sdp"
                  android:textColor="@color/white"
                  android:fontFamily="@font/roboto_regular"
                  android:layout_centerVertical="true"
        />

        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/view_line"
              android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/_40sdp"
                    android:id="@+id/layout_level_gift"
                    android:background="@color/background_main_second"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/level_gift"
                  android:textSize="@dimen/_12sdp"
                  android:textColor="@color/white"
                  android:fontFamily="@font/roboto_regular"
                  android:layout_centerVertical="true"
        />

        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/view_line"
              android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/_40sdp"
                    android:id="@+id/layout_sale"
                    android:background="@color/background_main_second"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/sale"
                  android:textSize="@dimen/_12sdp"
                  android:textColor="@color/white"
                  android:fontFamily="@font/roboto_regular"
                  android:layout_centerVertical="true"
        />

        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/view_line"
              android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/_40sdp"
                    android:id="@+id/layout_beauty_of_life"
                    android:background="@color/background_main_second"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/beauty_of_life"
                  android:textSize="@dimen/_12sdp"
                  android:textColor="@color/white"
                  android:fontFamily="@font/roboto_regular"
                  android:layout_centerVertical="true"
        />

        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/view_line"
              android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/_40sdp"
                    android:id="@+id/layout_shop_offices"
                    android:background="@color/background_main_second"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/shop_offices"
                  android:textSize="@dimen/_12sdp"
                  android:textColor="@color/white"
                  android:fontFamily="@font/roboto_regular"
                  android:layout_centerVertical="true"
        />

    </RelativeLayout>


</LinearLayout></ScrollView>