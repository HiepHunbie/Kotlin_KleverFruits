<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
    <!--tools:openDrawer="start">-->
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                        android:background="@color/background_main"
                        android:layout_marginBottom="@dimen/_45sdp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/container_frame"
                    android:orientation="horizontal"
                    android:background="@color/background_main">

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="@dimen/_65sdp"
                      android:layout_alignParentBottom="true"
                      android:orientation="horizontal"
                      android:weightSum="5">

            <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/button_home"
                            android:background="@color/white"
                            android:layout_marginTop="@dimen/_20sdp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:weightSum="2"
                              android:orientation="vertical"
                >
                    <ImageView android:layout_width="match_parent" android:layout_height="0dp"
                               android:layout_weight="1"
                               android:id="@+id/img_button_home"
                               android:paddingTop="@dimen/_10sdp"
                               app:srcCompat="@drawable/ic_home"/>

                    <TextView android:layout_width="match_parent" android:layout_height="0dp"
                              android:layout_weight="1"
                              android:text="@string/home"
                              android:textColor="@color/background_main"
                              android:gravity="center_horizontal"
                              android:textSize="@dimen/_8sdp"
                              android:paddingTop="@dimen/_2sdp"
                              android:id="@+id/txt_button_home"
                              android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp"
                      android:background="@color/view_line_gray"/>
            </RelativeLayout>

            <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/button_search"
                            android:background="@color/white"
                            android:layout_marginTop="@dimen/_20sdp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:weightSum="2"
                              android:orientation="vertical"
                >
                    <ImageView android:layout_width="match_parent" android:layout_height="0dp"
                               android:layout_weight="1"
                               android:id="@+id/img_button_search"
                               android:paddingTop="@dimen/_10sdp"
                               app:srcCompat="@drawable/ic_search"/>

                    <TextView android:layout_width="match_parent" android:layout_height="0dp"
                              android:layout_weight="1"
                              android:text="@string/search"
                              android:textColor="@color/background_main"
                              android:gravity="center_horizontal"
                              android:textSize="@dimen/_8sdp"
                              android:paddingTop="@dimen/_2sdp"
                              android:id="@+id/txt_button_search"
                              android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp"
                      android:background="@color/view_line_gray"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/button_add_point"
            >

                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:weightSum="65"
                              android:orientation="vertical"
                >

                    <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp"
                                    android:layout_weight="42.5"
                                    android:id="@+id/img_button_add_point">
                        <View android:layout_width="match_parent" android:layout_height="1dp"
                              android:background="@color/view_line_gray"
                              android:layout_marginTop="@dimen/_20sdp"/>
                        <de.hdodenhof.circleimageview.CircleImageView android:layout_width="@dimen/_42sdp" android:layout_height="@dimen/_42sdp"
                                                                      android:src="@color/white"
                                                                      android:layout_centerHorizontal="true"
                                                                      android:layout_centerVertical="true"/>
                        <ImageView android:layout_width="@dimen/_38sdp" android:layout_height="@dimen/_38sdp"
                                   android:src="@drawable/ic_back_add_point"
                                   android:layout_centerInParent="true"/>
                        <ImageView android:layout_width="@dimen/_38sdp" android:layout_height="wrap_content"
                                   app:srcCompat="@drawable/ic_add_point"
                                   android:layout_centerInParent="true"/>
                    </RelativeLayout>

                    <TextView android:layout_width="match_parent" android:layout_height="0dp"
                              android:layout_weight="22.5"
                              android:text="@string/add_point"
                              android:textColor="@color/background_main"
                              android:gravity="center_horizontal"
                              android:textSize="@dimen/_8sdp"
                              android:paddingTop="@dimen/_2sdp"
                              android:id="@+id/txt_button_add_point"
                              android:fontFamily="@font/roboto_regular"
                    android:background="@color/white"/>
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/button_notification"
                            android:background="@color/white"
                            android:layout_marginTop="@dimen/_20sdp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:weightSum="2"
                              android:orientation="vertical"
                >
                    <ImageView android:layout_width="match_parent" android:layout_height="0dp"
                               android:layout_weight="1"
                               android:id="@+id/img_button_notificaiton"
                               android:paddingTop="@dimen/_10sdp"
                               app:srcCompat="@drawable/ic_notification"/>

                    <TextView android:layout_width="match_parent" android:layout_height="0dp"
                              android:layout_weight="1"
                              android:text="@string/notification"
                              android:textColor="@color/background_main"
                              android:gravity="center_horizontal"
                              android:textSize="@dimen/_8sdp"
                              android:paddingTop="@dimen/_2sdp"
                              android:id="@+id/txt_button_notification"
                              android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp"
                      android:background="@color/view_line_gray"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/button_cart"
                            android:background="@color/white"
                            android:layout_marginTop="@dimen/_20sdp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:weightSum="2"
                              android:orientation="vertical"
                >
                    <ImageView android:layout_width="match_parent" android:layout_height="0dp"
                               android:layout_weight="1"
                               android:id="@+id/img_button_cart"
                               android:paddingTop="@dimen/_10sdp"
                               app:srcCompat="@drawable/ic_cart"/>

                    <TextView android:layout_width="match_parent" android:layout_height="0dp"
                              android:layout_weight="1"
                              android:text="@string/cart"
                              android:textColor="@color/background_main"
                              android:gravity="center_horizontal"
                              android:textSize="@dimen/_8sdp"
                              android:paddingTop="@dimen/_2sdp"
                              android:id="@+id/txt_button_cart"
                              android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp"
                      android:background="@color/view_line_gray"/>
            </RelativeLayout>
        </LinearLayout>

        <ImageView android:layout_width="@dimen/_35sdp" android:layout_height="@dimen/_35sdp"
                   android:id="@+id/img_show_navigation"
                   app:srcCompat = "@drawable/ic_show_navigation"
                   android:padding="@dimen/_10sdp"/>

    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header"
            android:background="@color/background_main"
            app:itemTextColor="@color/white"/>
</androidx.drawerlayout.widget.DrawerLayout>