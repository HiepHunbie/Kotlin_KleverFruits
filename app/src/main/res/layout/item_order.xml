<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:id="@+id/layout_view"
    >

    <View android:layout_width="match_parent" android:layout_height="@dimen/_15sdp"
    android:background="@color/background_item"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="horizontal">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:text="@string/order_code"
                      android:textColor="@color/text_black_333"
                      android:textSize="@dimen/_12sdp"
                      android:fontFamily="@font/roboto_regular"
                      android:gravity="center"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:text=":"
                      android:textColor="@color/text_black_333"
                      android:textSize="@dimen/_12sdp"
                      android:fontFamily="@font/roboto_regular"
                      android:layout_marginLeft="@dimen/_3sdp"
                      android:gravity="center"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:id="@+id/txt_order_code"
                      android:text="aaa"
                      android:textColor="@color/background_main"
                      android:textSize="@dimen/_12sdp"
                      android:fontFamily="@font/roboto_regular"
                      android:layout_marginLeft="@dimen/_3sdp"
                      android:gravity="center"/>
            <ImageView android:layout_width="@dimen/_14sdp" android:layout_height="@dimen/_14sdp"
            app:srcCompat = "@drawable/ic_next"
            android:tint="@color/text_black_333"
            android:padding="@dimen/_3sdp"
            android:layout_gravity="center"/>
        </LinearLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:text="@string/order_code"
                      android:textColor="@color/text_gray_666"
                      android:textSize="@dimen/_10sdp"
                      android:fontFamily="@font/roboto_regular"
                      android:gravity="center"
            android:id="@+id/txt_date"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:text="@string/order_code"
                      android:textColor="@color/text_gray_666"
                      android:textSize="@dimen/_10sdp"
                      android:fontFamily="@font/roboto_italic"
                      android:gravity="center"
            android:layout_alignParentRight="true"
            android:id="@+id/txt_status"/>
        </RelativeLayout>
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp"
    android:background="@color/view_line_gray"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ryv_order_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal"
    android:layout_gravity="right"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:text="1 san pham,"
                  android:textColor="@color/text_black_333"
                  android:textSize="@dimen/_11sdp"
                  android:fontFamily="@font/roboto_regular"
                  android:gravity="center"
        android:id="@+id/txt_count_product"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:text="@string/all_"
                  android:textColor="@color/text_black_333"
                  android:textSize="@dimen/_11sdp"
                  android:fontFamily="@font/roboto_regular"
                  android:layout_marginLeft="@dimen/_3sdp"
                  android:gravity="center"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:id="@+id/txt_total_cost"
                  android:text="aaa"
                  android:textColor="@color/background_main"
                  android:textSize="@dimen/_13sdp"
                  android:fontFamily="@font/roboto_bold"
                  android:layout_marginLeft="@dimen/_3sdp"
                  android:gravity="center"/>
    </LinearLayout>
</LinearLayout>