<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/layout_festival_american_grape">
            <ImageView android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       android:scaleType="fitCenter"
                       android:src="@drawable/ic_background_american_grape"/>
            <ImageView android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       android:scaleType="fitCenter"
                       app:srcCompat="@drawable/ic_back_american_grape"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
                          android:layout_alignParentBottom="true">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="@string/festival_american_grape_big"
                          android:textColor="@color/white"
                          android:gravity="center_horizontal"
                          android:fontFamily="@font/roboto_bold"
                          android:layout_above="@+id/txt_date_america_grape"
                android:textSize="@dimen/_18sdp"
                />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:id="@+id/txt_date_america_grape"
                          android:text="aaaaaa"
                          android:textColor="@color/white"
                          android:gravity="center_horizontal"
                          android:layout_alignParentBottom="true"
                          android:paddingBottom="@dimen/_10sdp"
                          android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_12sdp"/>

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:id="@+id/layout_flash_sale">
            <ImageView android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       android:scaleType="fitCenter"
                       android:src="@drawable/ic_background_flash_sale"/>
            <ImageView android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       android:scaleType="fitCenter"
                       app:srcCompat="@drawable/ic_back_flash_sale"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="@string/flash_sale_big"
                      android:textColor="@color/white"
                      android:gravity="center_horizontal"
                      android:fontFamily="@font/roboto_bold"
                      android:layout_centerInParent="true"
                      android:textSize="@dimen/_18sdp"
            />
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:id="@+id/layout_bonus_member">
            <ImageView android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       android:scaleType="fitCenter"
                       android:src="@drawable/ic_background_bonus_member"/>
            <ImageView android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       android:scaleType="fitCenter"
                       app:srcCompat="@drawable/ic_back_flash_sale"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="@string/bonus_member_big"
                      android:textColor="@color/white"
                      android:gravity="center_horizontal"
                      android:fontFamily="@font/roboto_bold"
                      android:layout_centerInParent="true"
                      android:textSize="@dimen/_18sdp"
            />
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:id="@+id/layout_new_fruits">
            <ImageView android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       android:scaleType="fitCenter"
                       android:src="@drawable/ic_background_new_fruits"/>
            <ImageView android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       android:scaleType="fitCenter"
                       app:srcCompat="@drawable/ic_back_flash_sale"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="@string/new_fruits_big"
                      android:textColor="@color/white"
                      android:gravity="center_horizontal"
                      android:fontFamily="@font/roboto_bold"
                      android:layout_centerInParent="true"
                      android:textSize="@dimen/_18sdp"
            />
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:id="@+id/layout_level_gift">
            <ImageView android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       android:scaleType="fitCenter"
                       android:src="@drawable/ic_background_level_gif"/>
            <ImageView android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       android:scaleType="fitCenter"
                       app:srcCompat="@drawable/ic_back_flash_sale"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="@string/level_gift_big"
                      android:textColor="@color/white"
                      android:gravity="center_horizontal"
                      android:fontFamily="@font/roboto_bold"
                      android:layout_centerInParent="true"
                      android:textSize="@dimen/_18sdp"
            />
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:id="@+id/layout_join_event">
            <ImageView android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       android:scaleType="fitCenter"
                       android:src="@drawable/ic_background_join_event"/>
            <ImageView android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       android:scaleType="fitCenter"
                       app:srcCompat="@drawable/ic_back_flash_sale"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="@string/join_event_big"
                      android:textColor="@color/white"
                      android:gravity="center_horizontal"
                      android:fontFamily="@font/roboto_bold"
                      android:layout_centerInParent="true"
                      android:textSize="@dimen/_18sdp"
            />
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:id="@+id/layout_beauty_of_life">
            <ImageView android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       android:scaleType="fitCenter"
                       android:src="@drawable/ic_background_beauty_life"/>
            <ImageView android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       android:scaleType="fitCenter"
                       app:srcCompat="@drawable/ic_back_flash_sale"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="@string/beauty_of_life_big"
                      android:textColor="@color/white"
                      android:gravity="center_horizontal"
                      android:fontFamily="@font/roboto_bold"
                      android:layout_centerInParent="true"
                      android:textSize="@dimen/_18sdp"
            />
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:id="@+id/layout_album_klever">
            <ImageView android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       android:scaleType="fitCenter"
                       android:src="@drawable/ic_background_album_klever"/>
            <ImageView android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       android:scaleType="fitCenter"
                       app:srcCompat="@drawable/ic_back_flash_sale"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="@string/album_klever_big"
                      android:textColor="@color/white"
                      android:gravity="center_horizontal"
                      android:fontFamily="@font/roboto_bold"
                      android:layout_centerInParent="true"
                      android:textSize="@dimen/_18sdp"
            />
        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:padding="@dimen/_30sdp"
                        android:background="@color/background_main"
                        android:layout_alignParentBottom="true">

            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            >
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:padding="@dimen/_10sdp"
                          android:id="@+id/edt_search"
                          android:background="@drawable/custom_edittext_login_violet"
                          android:textColor="@color/white"
                          android:textSize="@dimen/_11sdp"
                          android:hint="@string/input_keyword_search"
                          android:textColorHint="@color/text_color_violet"
                          android:fontFamily="@font/roboto_regular"/>

                <ImageView android:layout_width="@dimen/_20sdp" android:layout_height="@dimen/_20sdp"
                           app:srcCompat = "@drawable/ic_search"
                           android:layout_centerVertical="true"
                           android:layout_alignParentRight="true"
                           android:layout_marginRight="@dimen/_10sdp"
                           android:padding="@dimen/_4sdp"
                           android:id="@+id/img_search"
                android:tint="@color/white"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>