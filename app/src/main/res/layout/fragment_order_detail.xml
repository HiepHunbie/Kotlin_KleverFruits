<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@color/background_item">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical"
        >
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:padding="@dimen/_15sdp"
                            android:background="@color/white">

                <ImageView android:layout_width="@dimen/_20sdp" android:layout_height="@dimen/_20sdp"
                           android:id="@+id/img_back_order_detail"
                           app:srcCompat="@drawable/ic_back"
                           android:padding="@dimen/_3sdp"
                           android:layout_centerVertical="true"
                           android:tint="@color/text_black_333"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:gravity="center"
                          android:text="@string/order_detail"
                          android:textColor="@color/text_black_333"
                          android:fontFamily="@font/roboto_regular"
                          android:textSize="@dimen/_16sdp"
                />
            </RelativeLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp"
                  android:background="@color/view_line_gray"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:padding="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/white">

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:text="@string/order_code"
                              android:textColor="@color/text_black_333"
                              android:textSize="@dimen/_12sdp"
                              android:fontFamily="@font/roboto_regular"
                              android:gravity="center"/>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:text=":"
                              android:textColor="@color/text_black_333"
                              android:textSize="@dimen/_12sdp"
                              android:fontFamily="@font/roboto_regular"
                              android:layout_marginLeft="@dimen/_3sdp"
                              android:gravity="center"/>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:id="@+id/txt_order_code"
                              android:text="aaa"
                              android:textColor="@color/background_main"
                              android:textSize="@dimen/_12sdp"
                              android:fontFamily="@font/roboto_regular"
                              android:layout_marginLeft="@dimen/_3sdp"
                              android:gravity="center"/>
                    <ImageView android:layout_width="@dimen/_14sdp" android:layout_height="@dimen/_14sdp"
                               app:srcCompat = "@drawable/ic_next"
                               android:tint="@color/text_black_333"
                               android:padding="@dimen/_3sdp"
                               android:layout_gravity="center"/>
                </LinearLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:text="@string/order_code"
                              android:textColor="@color/text_gray_888"
                              android:textSize="@dimen/_10sdp"
                              android:fontFamily="@font/roboto_regular"
                              android:gravity="center"
                              android:id="@+id/txt_date"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:text="@string/order_code"
                              android:textColor="@color/text_gray_666"
                              android:textSize="@dimen/_10sdp"
                              android:fontFamily="@font/roboto_italic"
                              android:gravity="center"
                              android:layout_alignParentRight="true"
                              android:id="@+id/txt_status"/>
                </RelativeLayout>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp"
            android:background="@color/view_line_gray"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="@dimen/_15sdp">
                <ImageView android:layout_width="@dimen/_12sdp" android:layout_height="@dimen/_12sdp"
                app:srcCompat = "@drawable/ic_location"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"/>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical">
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:layout_gravity="center_vertical"
                                  android:text="@string/address_get_product"
                                  android:textColor="@color/text_black_333"
                                  android:textSize="@dimen/_12sdp"
                                  android:fontFamily="@font/roboto_regular"
                                  android:gravity="left"/>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:layout_gravity="right"
                                  android:text="@string/copy_big"
                                  android:textColor="@color/background_main"
                                  android:textSize="@dimen/_12sdp"
                                  android:fontFamily="@font/roboto_regular"
                                  android:gravity="left"
                        android:layout_alignParentRight="true"
                        android:id="@+id/txt_copy"/>
                    </RelativeLayout>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:text="@string/order_code"
                              android:textColor="@color/text_gray_888"
                              android:textSize="@dimen/_10sdp"
                              android:fontFamily="@font/roboto_regular"
                              android:gravity="center"
                              android:id="@+id/txt_name"
                    android:layout_marginTop="@dimen/_8sdp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:text="099999999"
                              android:textColor="@color/text_gray_888"
                              android:textSize="@dimen/_10sdp"
                              android:fontFamily="@font/roboto_regular"
                              android:gravity="center"
                              android:id="@+id/txt_phone"
                              android:layout_marginTop="@dimen/_8sdp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:text="xa dan dong da"
                              android:textColor="@color/text_gray_888"
                              android:textSize="@dimen/_10sdp"
                              android:fontFamily="@font/roboto_regular"
                              android:gravity="center"
                              android:id="@+id/txt_address_detail"
                              android:layout_marginTop="@dimen/_8sdp"/>
                </LinearLayout>
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp"
                  android:background="@color/view_line_gray"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingTop="@dimen/_15sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp">
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                    <ImageView android:layout_width="@dimen/_12sdp" android:layout_height="@dimen/_12sdp"
                               app:srcCompat = "@drawable/ic_car"
                               android:layout_marginRight="@dimen/_5sdp"
                    android:layout_centerVertical="true"
                    android:id="@+id/img_location"/>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:text="@string/transit_info"
                              android:textColor="@color/text_black_333"
                              android:textSize="@dimen/_12sdp"
                              android:fontFamily="@font/roboto_regular"
                              android:gravity="left"
                    android:layout_toRightOf="@+id/img_location"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_gravity="right"
                              android:text="@string/view_big"
                              android:textColor="@color/background_main"
                              android:textSize="@dimen/_12sdp"
                              android:fontFamily="@font/roboto_regular"
                              android:gravity="left"
                              android:layout_alignParentRight="true"
                              android:id="@+id/txt_view"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp">

                    <ImageView android:layout_width="@dimen/_12sdp" android:layout_height="@dimen/_12sdp"
                               app:srcCompat = "@drawable/ic_point"
                               android:layout_marginRight="@dimen/_5sdp"
                               android:layout_centerVertical="true"
                               android:id="@+id/img_point"/>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:text="@string/transit_info"
                              android:textColor="@color/background_main"
                              android:textSize="@dimen/_11sdp"
                              android:fontFamily="@font/roboto_regular"
                              android:gravity="left"
                              android:layout_toRightOf="@+id/img_point"
                    android:id="@+id/txt_transit_status"/>

                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_15sdp">

                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:text="@string/transit_info"
                              android:textColor="@color/text_gray_888"
                              android:textSize="@dimen/_10sdp"
                              android:fontFamily="@font/roboto_regular"
                              android:gravity="left"
                              android:layout_marginLeft="@dimen/_17sdp"
                              android:id="@+id/txt_transit_date"/>

                </RelativeLayout>
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp"
            android:background="@color/view_line_gray"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/ryv_order_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"/>
            </RelativeLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp"
            android:background="@color/view_line_gray"/>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/_15sdp">

                <ImageView android:layout_width="@dimen/_15sdp" android:layout_height="@dimen/_15sdp"
                           app:srcCompat = "@drawable/ic_money"
                           android:layout_marginRight="@dimen/_2sdp"
                           android:layout_centerVertical="true"
                           android:id="@+id/img_money"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:text="@string/type_pay"
                          android:textColor="@color/text_black_333"
                          android:textSize="@dimen/_12sdp"
                          android:fontFamily="@font/roboto_regular"
                          android:gravity="left"
                          android:layout_toRightOf="@+id/img_money"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_gravity="right"
                          android:text="Thanh toan tai nha"
                          android:textColor="@color/text_black_333"
                          android:textSize="@dimen/_12sdp"
                          android:fontFamily="@font/roboto_regular"
                          android:gravity="left"
                          android:layout_alignParentRight="true"
                          android:id="@+id/txt_type_pay"/>
            </RelativeLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp"
            android:background="@color/view_line_gray"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="@dimen/_15sdp">
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:text="@string/total_product_cost"
                              android:textColor="@color/text_black_333"
                              android:textSize="@dimen/_12sdp"
                              android:fontFamily="@font/roboto_regular"
                              android:gravity="left"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_gravity="right"
                              android:text="122222222"
                              android:textColor="@color/text_black_333"
                              android:textSize="@dimen/_12sdp"
                              android:fontFamily="@font/roboto_regular"
                              android:gravity="left"
                              android:layout_alignParentRight="true"
                              android:id="@+id/txt_total_product_cost"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:text="@string/ship_cost"
                              android:textColor="@color/text_black_333"
                              android:textSize="@dimen/_12sdp"
                              android:fontFamily="@font/roboto_regular"
                              android:gravity="left"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_gravity="right"
                              android:text="0 VND"
                              android:textColor="@color/text_black_333"
                              android:textSize="@dimen/_12sdp"
                              android:fontFamily="@font/roboto_regular"
                              android:gravity="left"
                              android:layout_alignParentRight="true"
                              android:id="@+id/txt_ship_cost"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:text="@string/sale_code"
                              android:textColor="@color/text_black_333"
                              android:textSize="@dimen/_12sdp"
                              android:fontFamily="@font/roboto_regular"
                              android:gravity="left"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_gravity="right"
                              android:text="0 VND"
                              android:textColor="@color/background_main"
                              android:textSize="@dimen/_12sdp"
                              android:fontFamily="@font/roboto_regular"
                              android:gravity="left"
                              android:layout_alignParentRight="true"
                              android:id="@+id/txt_sale_code"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:text="@string/total_cost"
                              android:textColor="@color/text_black_333"
                              android:textSize="@dimen/_12sdp"
                              android:fontFamily="@font/roboto_regular"
                              android:gravity="bottom"
                    android:layout_centerVertical="true"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_gravity="right"
                              android:text="@string/copy_big"
                              android:textColor="@color/background_main"
                              android:textSize="@dimen/_14sdp"
                              android:fontFamily="@font/roboto_bold"
                              android:gravity="center_vertical"
                              android:layout_alignParentRight="true"
                              android:id="@+id/txt_total_cost"
                    android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp"
             android:background="@color/view_line_gray"/>

            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@color/white">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@drawable/custom_dialog_violet"
                          android:id="@+id/txt_note"
                          android:paddingTop="@dimen/_10sdp"
                          android:paddingBottom="@dimen/_10sdp"
                          android:layout_margin="@dimen/_10sdp"
                          android:text="@string/note_big"
                          android:textColor="@color/white"
                          android:gravity="center"
                          android:textSize="@dimen/_14sdp"
                          android:fontFamily="@font/roboto_regular"
                />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>