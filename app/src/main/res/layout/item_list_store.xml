<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:id="@+id/layout_view_list_store">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layoutDirection="rtl"
    android:layout_margin="@dimen/_15sdp"
    android:id="@+id/layout_top">

        <ImageView android:layout_width="@dimen/_12sdp"
                   android:layout_height="@dimen/_12sdp"
                   app:srcCompat = "@drawable/ic_next"
                   android:tint="@color/text_black_333"
        android:layout_marginTop="@dimen/_3sdp"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layoutDirection="ltr">
                <ImageView android:layout_width="@dimen/_12sdp" android:layout_height="@dimen/_12sdp"
                app:srcCompat = "@drawable/ic_address"
                android:layout_gravity="center_vertical"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/txt_address"
                android:text="aaaa"
                android:textColor="@color/text_black_333"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginLeft="@dimen/_5sdp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="left"
                          android:layoutDirection="ltr"
            android:layout_marginTop="@dimen/_5sdp">
                <ImageView android:layout_width="@dimen/_12sdp" android:layout_height="@dimen/_12sdp"
                           app:srcCompat = "@drawable/ic_phone"
                           android:layout_gravity="center_vertical"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:id="@+id/txt_phone"
                          android:text="aaaa"
                          android:textColor="@color/text_black_333"
                          android:textSize="@dimen/_12sdp"
                          android:fontFamily="@font/roboto_regular"
                          android:layout_marginLeft="@dimen/_5sdp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp"
    android:background="@color/view_line_gray"
    android:layout_below="@+id/layout_top"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_marginRight="@dimen/_15sdp"/>
</RelativeLayout>