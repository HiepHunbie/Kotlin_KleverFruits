<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_item">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:padding="@dimen/_15sdp"
                  android:orientation="vertical"
                  android:id="@+id/layout_title_klever_bonus">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        >
            <ImageView android:layout_width="@dimen/_20sdp" android:layout_height="@dimen/_20sdp"
                       android:id="@+id/ic_back_member_info"
                       app:srcCompat="@drawable/ic_back"
                       android:padding="@dimen/_3sdp"
                       android:layout_centerVertical="true"
                       android:tint="@color/text_black_333"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="@string/member_info"
                      android:textColor="@color/text_black_333"
                      android:fontFamily="@font/roboto_regular"
                      android:textSize="@dimen/_16sdp"/>
        </RelativeLayout>

    </LinearLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp">

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:background="@drawable/custom_dialog_gray">

                <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content"
                           android:adjustViewBounds="true"
                           android:id="@+id/img_member_level"
                           android:src="@drawable/ic_back_member"/>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:background="@color/white"
                              android:padding="@dimen/_10sdp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="@string/point_can_use"
                              android:textColor="@color/text_black_333"
                              android:fontFamily="@font/roboto_regular"
                              android:singleLine="true"
                              android:textSize="@dimen/_10sdp"
                              android:layout_centerVertical="true"
                              android:layout_marginBottom="@dimen/_3sdp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textColor="@color/background_main"
                              android:fontFamily="@font/roboto_regular"
                              android:singleLine="true"
                              android:textSize="@dimen/_13sdp"
                              android:layout_centerVertical="true"
                              android:layout_marginBottom="@dimen/_3sdp"
                              android:id="@+id/txt_point_can_use"
                              android:text="1234"
                    />

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:layout_marginTop="@dimen/_5sdp"
                                  android:id="@+id/layout_bonus_point_history">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="@string/bonus_point_history"
                                  android:textColor="@color/text_black_333"
                                  android:fontFamily="@font/roboto_regular"
                                  android:singleLine="true"
                                  android:textSize="@dimen/_10sdp"
                                  android:layout_gravity="center_vertical"
                                  android:gravity="center_vertical"/>
                        <ImageView android:layout_width="@dimen/_8sdp" android:layout_height="@dimen/_8sdp"
                                   app:srcCompat="@drawable/ic_next"
                                   android:tint="@color/text_gray_666"
                                   android:layout_gravity="center_vertical"
                                   android:layout_marginLeft="@dimen/_2sdp"
                        />
                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:layout_marginTop="@dimen/_10sdp"
                                  android:id="@+id/layout_how_to_save_bonus_point">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="@string/how_to_save_bonus_point"
                                  android:textColor="@color/text_black_333"
                                  android:fontFamily="@font/roboto_regular"
                                  android:singleLine="true"
                                  android:textSize="@dimen/_10sdp"
                                  android:layout_gravity="center_vertical"
                                  android:gravity="center_vertical"/>
                        <ImageView android:layout_width="@dimen/_8sdp" android:layout_height="@dimen/_8sdp"
                                   app:srcCompat="@drawable/ic_next"
                                   android:tint="@color/text_gray_666"
                                   android:layout_gravity="center_vertical"
                                   android:layout_marginLeft="@dimen/_2sdp"
                        />
                    </LinearLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp"
                          android:background="@color/view_line_gray"
                          android:layout_marginTop="@dimen/_12sdp"/>

                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_12sdp">
                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:orientation="vertical"
                                      android:background="@color/white">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:text="@string/my_bonus"
                                      android:textColor="@color/text_black_333"
                                      android:fontFamily="@font/roboto_regular"
                                      android:singleLine="true"
                                      android:textSize="@dimen/_10sdp"
                                      android:layout_centerVertical="true"
                                      android:layout_marginBottom="@dimen/_3sdp"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:textColor="@color/background_main"
                                      android:fontFamily="@font/roboto_regular"
                                      android:singleLine="true"
                                      android:textSize="@dimen/_13sdp"
                                      android:layout_centerVertical="true"
                                      android:layout_marginBottom="@dimen/_3sdp"
                                      android:id="@+id/txt_my_bonus"
                                      android:text="1234"
                            />
                        </LinearLayout>
                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:orientation="horizontal"
                                      android:id="@+id/layout_detail_bonus"
                                      android:layout_alignParentRight="true"
                                      android:layout_centerVertical="true">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:text="@string/detail"
                                      android:textColor="@color/text_black_333"
                                      android:fontFamily="@font/roboto_regular"
                                      android:singleLine="true"
                                      android:textSize="@dimen/_10sdp"
                                      android:layout_gravity="center_vertical"
                                      android:gravity="center_vertical"/>
                            <ImageView android:layout_width="@dimen/_8sdp" android:layout_height="@dimen/_8sdp"
                                       app:srcCompat="@drawable/ic_next"
                                       android:tint="@color/text_gray_666"
                                       android:layout_gravity="center_vertical"
                                       android:layout_marginLeft="@dimen/_2sdp"
                            />
                        </LinearLayout>
                    </RelativeLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp"
                          android:background="@color/view_line_gray"
                          android:layout_marginTop="@dimen/_12sdp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="@string/point_can_use"
                              android:textColor="@color/text_black_333"
                              android:fontFamily="@font/roboto_regular"
                              android:singleLine="true"
                              android:textSize="@dimen/_10sdp"
                              android:layout_centerVertical="true"
                              android:layout_marginTop="@dimen/_12sdp"
                              android:layout_marginBottom="@dimen/_8sdp"/>
                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:orientation="vertical"
                    >


                        <androidx.viewpager.widget.ViewPager
                                android:id="@+id/pager_bonus_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_alignParentTop="true" />

                        <com.viewpagerindicator.CirclePageIndicator
                                android:id="@+id/indicator_bonus_detail"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:gravity="bottom"
                                android:padding="10dip"
                                app:centered="true"
                                app:fillColor="@color/background_main"
                                app:pageColor="#fff"
                                app:snap="false" />

                    </LinearLayout>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:id="@+id/layout_view_details"
                                  android:layout_alignParentRight="true"
                                  android:layout_centerVertical="true"
                                  android:layout_gravity="right">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="@string/view_details"
                                  android:textColor="@color/text_black_333"
                                  android:fontFamily="@font/roboto_regular"
                                  android:singleLine="true"
                                  android:textSize="@dimen/_10sdp"
                                  android:layout_gravity="center_vertical"
                                  android:gravity="center_vertical"/>
                        <ImageView android:layout_width="@dimen/_8sdp" android:layout_height="@dimen/_8sdp"
                                   app:srcCompat="@drawable/ic_next"
                                   android:tint="@color/text_gray_666"
                                   android:layout_gravity="center_vertical"
                                   android:layout_marginLeft="@dimen/_2sdp"
                        />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_marginTop="@dimen/_5sdp"
                          android:background="@color/white">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_weight="1" android:layout_height="match_parent"
                                  android:id="@+id/layout_member"
                                  android:background="@drawable/custom_border_bottom_violet"
                                  android:paddingTop="@dimen/_10sdp"
                                  android:paddingBottom="@dimen/_10sdp"
                                  android:orientation="vertical">
                        <ImageView android:layout_width="@dimen/_25sdp" android:layout_height="@dimen/_25sdp"
                                   android:src="@drawable/ic_violet_member"
                                   android:layout_gravity="center_horizontal"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:text="@string/member"
                                  android:textColor="@color/text_black_333"
                                  android:fontFamily="@font/roboto_regular"
                                  android:textSize="@dimen/_10sdp"
                                  android:layout_centerInParent="true"
                                  android:layout_gravity="center_horizontal"
                        />
                    </LinearLayout>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_weight="1" android:layout_height="match_parent"
                                  android:id="@+id/layout_sliver_member"
                                  android:background="@drawable/custom_border_bottom_violet"
                                  android:paddingTop="@dimen/_10sdp"
                                  android:paddingBottom="@dimen/_10sdp"
                                  android:orientation="vertical">
                        <ImageView android:layout_width="@dimen/_25sdp" android:layout_height="@dimen/_25sdp"
                                   android:src="@drawable/ic_sliver_member"
                                   android:layout_gravity="center_horizontal"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:text="@string/sliver"
                                  android:textColor="@color/text_black_333"
                                  android:fontFamily="@font/roboto_regular"
                                  android:textSize="@dimen/_10sdp"
                                  android:layout_centerInParent="true"
                                  android:layout_gravity="center_horizontal"
                        />
                    </LinearLayout>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_weight="1" android:layout_height="match_parent"
                                  android:id="@+id/layout_gold_member"
                                  android:background="@drawable/custom_border_bottom_violet"
                                  android:paddingTop="@dimen/_10sdp"
                                  android:paddingBottom="@dimen/_10sdp"
                                  android:orientation="vertical">
                        <ImageView android:layout_width="@dimen/_25sdp" android:layout_height="@dimen/_25sdp"
                                   android:src="@drawable/ic_gold_member"
                                   android:layout_gravity="center_horizontal"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:text="@string/gold"
                                  android:textColor="@color/text_black_333"
                                  android:fontFamily="@font/roboto_regular"
                                  android:textSize="@dimen/_10sdp"
                                  android:layout_centerInParent="true"
                                  android:layout_gravity="center_horizontal"
                        />
                    </LinearLayout>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_weight="1" android:layout_height="match_parent"
                                  android:id="@+id/layout_diamound_member"
                                  android:background="@drawable/custom_border_bottom_violet"
                                  android:paddingTop="@dimen/_10sdp"
                                  android:paddingBottom="@dimen/_10sdp"
                                  android:orientation="vertical">
                        <ImageView android:layout_width="@dimen/_25sdp" android:layout_height="@dimen/_25sdp"
                                   android:src="@drawable/ic_diamound_member"
                                   android:layout_gravity="center_horizontal"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:text="@string/diamound"
                                  android:textColor="@color/text_black_333"
                                  android:fontFamily="@font/roboto_regular"
                                  android:textSize="@dimen/_10sdp"
                                  android:layout_centerInParent="true"
                                  android:layout_gravity="center_horizontal"
                        />
                    </LinearLayout>
                </LinearLayout>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/member"
                          android:textColor="@color/text_black_333"
                          android:fontFamily="@font/roboto_regular"
                          android:singleLine="true"
                          android:textSize="@dimen/_12sdp"
                          android:layout_centerVertical="true"
                          android:layout_margin="@dimen/_10sdp"
                          android:id="@+id/txt_title_member"/>

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               android:id="@+id/ryv_member"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"></androidx.recyclerview.widget.RecyclerView>
                </RelativeLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:id="@+id/layout_check_more"
                              android:layout_alignParentRight="true"
                              android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_10sdp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="@string/check_more"
                              android:textColor="@color/text_black_333"
                              android:fontFamily="@font/roboto_regular"
                              android:singleLine="true"
                              android:textSize="@dimen/_10sdp"
                              android:layout_gravity="center_vertical"
                              android:gravity="center_vertical"/>
                    <ImageView android:layout_width="@dimen/_8sdp" android:layout_height="@dimen/_8sdp"
                               app:srcCompat="@drawable/ic_next"
                               android:tint="@color/text_gray_666"
                               android:layout_gravity="center_vertical"
                               android:layout_marginLeft="@dimen/_2sdp"
                    />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                android:background="@color/view_line_gray"
                android:layout_margin="@dimen/_10sdp"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/schedule_quota"
                          android:textColor="@color/text_black_333"
                          android:fontFamily="@font/roboto_regular"
                          android:singleLine="true"
                          android:textSize="@dimen/_12sdp"
                          android:layout_centerVertical="true"
                          android:layout_marginLeft="@dimen/_10sdp"
                          android:layout_marginRight="@dimen/_10sdp"/>
                <ProgressBar
                        android:id="@+id/prb_member"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_10sdp"
                        android:max="100"
                        android:progress="50"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/horizontal_progressbar_custom"
                />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/you_opened_this_level"
                          android:textColor="@color/text_black_333"
                          android:fontFamily="@font/roboto_regular"
                          android:singleLine="true"
                          android:textSize="@dimen/_9sdp"
                          android:layout_centerVertical="true"
                          android:layout_marginLeft="@dimen/_10sdp"
                          android:layout_marginRight="@dimen/_10sdp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/you_opened_this_level_detail"
                          android:textColor="@color/background_main"
                          android:fontFamily="@font/roboto_regular"
                          android:textSize="@dimen/_9sdp"
                          android:layout_centerVertical="true"
                          android:layout_marginLeft="@dimen/_10sdp"
                          android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>