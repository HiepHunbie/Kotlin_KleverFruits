<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:background="@color/background_main"
                  android:padding="@dimen/_15sdp"
                  android:orientation="vertical"
                  android:id="@+id/layout_title_list_store">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        >

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="@string/find_product"
                      android:textColor="@color/white"
                      android:fontFamily="@font/roboto_regular"
                      android:textSize="@dimen/_16sdp"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp">

            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:paddingTop="@dimen/_10sdp"
                      android:paddingBottom="@dimen/_10sdp"
                      android:paddingRight="@dimen/_20sdp"
                      android:id="@+id/edt_search_list_store"
                      android:background="@drawable/custom_edittext_login_violet"
                      android:textColor="@color/white"
                      android:textSize="@dimen/_11sdp"
                      android:hint="@string/input_keyword_search_product"
                      android:textColorHint="@color/text_color_violet"
                      android:fontFamily="@font/roboto_regular"
                      android:paddingLeft="@dimen/_33sdp"/>
            <ImageView android:layout_width="@dimen/_20sdp" android:layout_height="@dimen/_20sdp"
                       app:srcCompat = "@drawable/ic_search"
                       android:layout_centerVertical="true"
                       android:padding="@dimen/_4sdp"
                       android:id="@+id/img_search_list_store"
                       android:tint="@color/white"
                       android:layout_marginLeft="@dimen/_10sdp"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/layout_flash_sale">
        <ImageView android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:scaleType="centerCrop"
                   android:src="@drawable/ic_background_flash_sale"/>
        <ImageView android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:adjustViewBounds="true"
                   android:scaleType="centerCrop"
                   app:srcCompat="@drawable/ic_back_flash_sale"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="@string/flash_sale_big"
                  android:textColor="@color/white"
                  android:gravity="center_horizontal"
                  android:fontFamily="@font/roboto_bold"
                  android:layout_centerInParent="true"
                  android:textSize="@dimen/_18sdp"
        />
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/layout_new_fruits">
        <ImageView android:layout_width="fill_parent"
                   android:layout_height="match_parent"
                   android:adjustViewBounds="true"
                   android:scaleType="centerCrop"
                   android:src="@drawable/ic_background_new_fruits"/>
        <ImageView android:layout_width="fill_parent"
                   android:layout_height="match_parent"
                   android:adjustViewBounds="true"
                   android:scaleType="centerCrop"
                   app:srcCompat="@drawable/ic_back_flash_sale"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="@string/new_fruits_big"
                  android:textColor="@color/white"
                  android:gravity="center_horizontal"
                  android:fontFamily="@font/roboto_bold"
                  android:layout_centerInParent="true"
                  android:textSize="@dimen/_18sdp"
        />
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/layout_level_fruits">
        <ImageView android:layout_width="fill_parent"
                   android:layout_height="match_parent"
                   android:adjustViewBounds="true"
                   android:scaleType="centerCrop"
                   android:src="@drawable/ic_back_level_fruits"/>
        <ImageView android:layout_width="fill_parent"
                   android:layout_height="match_parent"
                   android:adjustViewBounds="true"
                   android:scaleType="centerCrop"
                   app:srcCompat="@drawable/ic_back_flash_sale"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="@string/level_fruits_big"
                  android:textColor="@color/white"
                  android:gravity="center_horizontal"
                  android:fontFamily="@font/roboto_bold"
                  android:layout_centerInParent="true"
                  android:textSize="@dimen/_18sdp"
        />
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/layout_level_gift">
        <ImageView android:layout_width="fill_parent"
                   android:layout_height="match_parent"
                   android:adjustViewBounds="true"
                   android:scaleType="centerCrop"
                   android:src="@drawable/ic_background_level_gif"/>
        <ImageView android:layout_width="fill_parent"
                   android:layout_height="match_parent"
                   android:adjustViewBounds="true"
                   android:scaleType="centerCrop"
                   app:srcCompat="@drawable/ic_back_flash_sale"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="@string/level_gift_big"
                  android:textColor="@color/white"
                  android:gravity="center_horizontal"
                  android:fontFamily="@font/roboto_bold"
                  android:layout_centerInParent="true"
                  android:textSize="@dimen/_18sdp"
        />
    </RelativeLayout>
</LinearLayout>