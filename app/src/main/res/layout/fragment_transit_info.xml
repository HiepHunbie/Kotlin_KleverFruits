<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_item">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical"
        >
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:padding="@dimen/_15sdp"
                            android:background="@color/white">

                <ImageView android:layout_width="@dimen/_20sdp" android:layout_height="@dimen/_20sdp"
                           android:id="@+id/img_back_transit_info"
                           app:srcCompat="@drawable/ic_back"
                           android:padding="@dimen/_3sdp"
                           android:layout_centerVertical="true"
                           android:tint="@color/text_black_333"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:gravity="center"
                          android:text="@string/transit_info"
                          android:textColor="@color/text_black_333"
                          android:fontFamily="@font/roboto_regular"
                          android:textSize="@dimen/_16sdp"
                />
            </RelativeLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp"
                  android:background="@color/view_line_gray"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>