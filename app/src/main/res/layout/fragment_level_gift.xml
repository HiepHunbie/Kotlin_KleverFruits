<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/white">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:background="@color/background_main"
                      android:padding="@dimen/_15sdp"
                      android:orientation="vertical"
                      android:id="@+id/layout_title_list_store">

            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            >
                <ImageView android:layout_width="@dimen/_20sdp" android:layout_height="@dimen/_20sdp"
                           android:id="@+id/img_back_level_gifts"
                           app:srcCompat="@drawable/ic_back"
                           android:padding="@dimen/_3sdp"
                           android:layout_centerVertical="true"/>

                <ImageView android:layout_width="@dimen/_20sdp" android:layout_height="@dimen/_20sdp"
                           android:id="@+id/img_show_navigation_level_gifts"
                           app:srcCompat="@drawable/ic_show_navigation"
                           android:padding="@dimen/_3sdp"
                           android:layout_toRightOf="@+id/img_back_level_gifts"
                           android:layout_centerVertical="true"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:gravity="center"
                          android:text="@string/level_gift"
                          android:textColor="@color/white"
                          android:fontFamily="@font/roboto_regular"
                          android:textSize="@dimen/_16sdp"/>
            </RelativeLayout>

        </LinearLayout>

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical">
            <ImageView android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       android:scaleType="fitCenter"
                       app:srcCompat="@drawable/ic_banner_product"
                       android:paddingTop="@dimen/_10sdp"
                       android:paddingLeft="@dimen/_10sdp"
                       android:paddingRight="@dimen/_10sdp"
                       android:paddingBottom="@dimen/_10sdp"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
            android:orientation="vertical">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp"
                                android:layout_weight="1"
                                android:id="@+id/layout_gift_love">
                    <ImageView android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:scaleType="centerCrop"
                               android:src="@drawable/ic_back_gift_love"/>
                    <ImageView android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:adjustViewBounds="true"
                               android:scaleType="centerCrop"
                               app:srcCompat="@drawable/ic_back_flash_sale"/>

                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:text="@string/gift_love_big"
                              android:textColor="@color/white"
                              android:gravity="center_horizontal"
                              android:fontFamily="@font/roboto_bold"
                              android:layout_centerInParent="true"
                              android:textSize="@dimen/_16sdp"
                    />
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp"
                                android:layout_weight="1"
                                android:id="@+id/layout_gift_boss">
                    <ImageView android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:scaleType="centerCrop"
                               android:src="@drawable/ic_back_gift_boss"/>
                    <ImageView android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:adjustViewBounds="true"
                               android:scaleType="fitXY"
                               app:srcCompat="@drawable/ic_back_flash_sale"/>

                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:text="@string/gift_boss_big"
                              android:textColor="@color/white"
                              android:gravity="center_horizontal"
                              android:fontFamily="@font/roboto_bold"
                              android:layout_centerInParent="true"
                              android:textSize="@dimen/_16sdp"
                    />
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp"
                                android:layout_weight="1"
                                android:id="@+id/layout_gift_health">
                    <ImageView android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:scaleType="centerCrop"
                               android:src="@drawable/ic_back_gift_health"/>
                    <ImageView android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:adjustViewBounds="true"
                               android:scaleType="centerCrop"
                               app:srcCompat="@drawable/ic_back_flash_sale"/>

                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:text="@string/gift_health_big"
                              android:textColor="@color/white"
                              android:gravity="center_horizontal"
                              android:fontFamily="@font/roboto_bold"
                              android:layout_centerInParent="true"
                              android:textSize="@dimen/_16sdp"
                    />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    </LinearLayout>

